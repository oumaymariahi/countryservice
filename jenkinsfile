pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Build with Maven') {
            steps {
                sh '''
                    mvn clean package -DskipTests
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("oumaymariahi/countryservice:v2")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', '74ac32e9-9f43-4cc6-a3a9-2bf40dfed8ec') {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy') {
    steps {
        sh 'docker-compose down'
        sh 'docker-compose pull'
        sh 'docker-compose up -d'
    }
}
    }
}
