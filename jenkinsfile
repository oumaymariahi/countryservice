pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {
        stage('Build with Maven') {
            steps {
                sh '''
                    mvn clean package -DskipTests
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("oumaymariahi/countryservice:v2")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', '74ac32e9-9f43-4cc6-a3a9-2bf40dfed8ec') {
                        dockerImage.push()
                    }
                }
            }
        }
		stage('Deploy to Kubernetes') {
		    steps {
		        script {
		            kubeconfig(credentialsId: 'kubeconfig-file', serverUrl: '') {
		                sh 'kubectl apply -f deployment.yaml'
		                sh 'kubectl apply -f service.yaml'
		            }
		        }
		    }
		}
		 stage('Deploy with Ansible') {
            steps {
                ansiblePlaybook(
                    playbook: 'playbookCICD.yml',
                    inventory: 'localhost,',
                    extras: "-e dockerhub_pwd=${dockerhub_pwd}"
                )
            }
        }
			
    }
}
